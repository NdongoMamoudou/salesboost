# Image Python légère et stable
FROM python:3.10-slim

# Dossier de travail dans le container
WORKDIR /app

# Installer dépendances OS nécessaires (Kafka client, build tools, HDFS access…)
RUN apt-get update && apt-get install -y \
    curl gcc libc6-dev && \
    rm -rf /var/lib/apt/lists/*

# Copier les dépendances Python
COPY backend/requirements.txt /app/requirements.txt

# Installer dépendances FastAPI + Kafka + MongoDB client + Redis client
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copier le code backend dans le container
COPY backend /app

# Exposer port API
EXPOSE 8000

# Lancer le serveur FastAPI avec Uvicorn
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
